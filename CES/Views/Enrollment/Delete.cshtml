@model CES.Models.Enrollment

<h2>Delete Enrollment</h2>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this enrollment?</h4>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">Student</dt>
        <dd class="col-sm-10">@Model.Student?.FullName</dd>

        <dt class="col-sm-2">Course</dt>
        <dd class="col-sm-10">@Model.Course?.Title</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EnrollmentIdGuid" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>