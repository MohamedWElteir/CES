@model CES.Models.Enrollment

<h2>Create Enrollment</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="StudentGuid" class="control-label">Student</label>
                <select asp-for="StudentGuid" class="form-control" asp-items="@(new SelectList(ViewBag.Students, "StudentGuid", "FullName"))">
                    <option value="">-- Select Student --</option>
                </select>
                <span asp-validation-for="StudentGuid" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CourseGuid" class="control-label">Course</label>
                <select asp-for="CourseGuid" class="form-control" asp-items="@(new SelectList(ViewBag.Courses, "CourseGuid", "Title"))" id="courseDropdown">
                    <option value="">-- Select Course --</option>
                </select>
                <span asp-validation-for="CourseGuid" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Available Slots:</label>
                <span id="availableSlots" class="form-text">Select a course to see available slots</span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
<script>
    $(document).ready(function() {
        $('#courseDropdown').change(function() {
            const selectedValue = $(this).val();
            if (selectedValue) {
                $.ajax({
                    url: '/Enrollment/GetAvailableSlots',
                    type: 'GET',
                    data: { courseId: selectedValue },
                    success: function(result) {
                        $('#availableSlots').text('Available slots: ' + result.availableSlots);
                    },
                    error: function() {
                        $('#availableSlots').text('Error loading available slots');
                    }
                });
            } else {
                $('#availableSlots').text('Select a course to see available slots');
            }
        });
    });
</script>
}